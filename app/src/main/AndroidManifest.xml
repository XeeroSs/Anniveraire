<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xeross.anniveraire">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Anniversaire">
        <activity android:name=".controller.gallery.request.GalleryRequestActivity"></activity>
        <activity android:name=".controller.gallery.user.GalleryUserActivity" />
        <activity android:name=".controller.gallery.details.GalleryDetailActivity" />
        <activity android:name=".controller.gallery.GalleryActivity" />
        <activity android:name=".controller.discussion.user.DiscussionUserActivity" />
        <activity android:name=".controller.discussion.request.DiscussionRequestActivity" />
        <activity
            android:name=".controller.login.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/Anniversaire.NoActionBar" />
        <activity android:name=".controller.messages.MessageActivity" />

        <activity
            android:name=".controller.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Anniversaire.Main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>